# Omnishop Frontend Environment Variables
# Copy this file to .env.local for local development
# Configure these in Vercel dashboard for production deployment

# ============================================
# REQUIRED - Backend API Configuration
# ============================================
# URL of the backend API (Railway deployment)
# Local: http://localhost:8000
# Production: https://your-app.railway.app
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# Application Configuration
# ============================================
NEXT_PUBLIC_APP_NAME=Omnishop
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered interior design platform

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=200000

# ============================================
# Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_VISUALIZATION=true

# ============================================
# Production Settings
# ============================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
